<h1>Blogpost <%= @entry.id.nil? ? 'erstellen' : 'bearbeiten' %></h1>

<% form_for(@entry) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <div>
    <%= f.label :excerpt %>
	<%= link_to_function ',', 'show_excerpt()' %><br/>
    <%= f.text_area :excerpt , :style => "display: #{ @entry.excerpt.nil? || @entry.excerpt.empty? ? 'none' : 'block'};" %>
  </div>
<div>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    Author: <%= @user %> (set from login)
  </p>
  <p>
    <%= f.submit( @entry.id.nil? ? 'Anlegen' : "Ã„ndern" ) %>
  </p>
<div>
<% end %>

<% unless @entry.id.nil? %>
<%= link_to 'Show', @entry %> |
<% end %>
<%= link_to 'Back', entries_path %>


<script>

function show_excerpt() {
	
	el = document.getElementById('entry_excerpt');
	if ( el.style.display == 'block' ) {
		el.style.display = 'none';
	} else {
		el.style.display = 'block';
	}
}

</script>