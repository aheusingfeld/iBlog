<?xml version="1.0" encoding="utf-8"?>

<feed xmlns="http://www.w3.org/2005/Atom">
    <title>i-Blog</title>
    <link rel="alternate" type="text/html" href="<%= blog_entries_path( @blog_id ) %>" />
    <link rel="self" type="application/atom+xml" href="<%= blog_entries_path( :atom ) %>" />
    <id>tag:internal.innoq.com/iblog,2009:/iblog//1</id>
    <updated><%= @entries[0].updated_at.to_formatted_s(:atom) unless @entries.empty? %></updated>
    <subtitle>yet another internal innoQ blog</subtitle>

    <generator uri="https://internal.innoq.com/iblog/">i-Blogs Custom ATOM Feed Generator 1.0</generator>

<% @entries.each do |entry| %>
<entry>
    <title><%= h entry.title %></title>
    <link rel="alternate" type="text/html" href="<%= blog_entry_path( entry.blog_id, entry )%>" />
    <id>tag:internal.innoq.com/iblog,2009:/iblog//1.<%= entry.blog_id %>.<%= entry.id %></id>

    <published><%= entry.created_at.to_formatted_s(:atom) %></published>

    <updated><%= entry.updated_at.to_formatted_s(:atom) %></updated>

    <summary>
        <![CDATA[
		<p>
		Folgende Dinge habe ich gestern/heute erreicht:
		</p>
		<div style="margin-left: 10px;"><%= textilize entry.progress %></div>
		<p>
		Ich plane heute zu tun:
		</p>
		<div style="margin-left: 10px;"><%= textilize entry.plans %></div>

		<% if !entry.problems.nil? && entry.problems.size > 0 %>
		<p>
		Ich habe folgende Probleme, die ich ohne Hilfe nicht lösen kann.
		</p>

		<div style="margin-left: 10px;"><%= textilize entry.problems %></div>
		<% else %>
		Aktuell habe ich alle Probleme im Griff.
		<% end %>]]>
	</summary>
    <author>
        <name><%= h entry.author %></name>
        <uri>https://internal.innoq.com/iblog/</uri>
    </author>

    
    
    <content type="html" xml:lang="en" xml:base="https://internal.innoq.com/iblog/">
        <![CDATA[
		<p>
		Folgende Dinge habe ich gestern/heute erreicht:
		</p>
		<div style="margin-left: 10px;"><%= textilize entry.progress %></div>
		<p>
		Ich plane heute zu tun:
		</p>
		<div style="margin-left: 10px;"><%= textilize entry.plans %></div>

		<% if !entry.problems.nil? && entry.problems.size > 0 %>
		<p>
		Ich habe folgende Probleme, die ich ohne Hilfe nicht lösen kann.
		</p>

		<div style="margin-left: 10px;"><%= textilize entry.problems %></div>
		<% else %>
		Aktuell habe ich alle Probleme im Griff.
		<% end %>
]]>
    </content>
</entry>
<% end %>
</feed>
