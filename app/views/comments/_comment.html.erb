<li class="comment" id="comment-<%= comment.id %>">
  <p>
    <%= avatar(comment.author) %><span class="author"><%= comment.author %></span>
    <%= link_to "vor " + time_ago_in_words(comment.created_at), blog_entry_path(comment.entry.blog, comment.entry, :anchor => "comment-#{comment.id}"), :class => "comment-timestamp" %></span>
  </p>
  <p><%= raw comment.content %></p>
</li>
