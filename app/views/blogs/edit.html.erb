<h2>Blog bearbeiten</h2>

<% form_for(@blog) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :owner %><br />
    <%= f.text_field :owner %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Speichern' %>
  </p>
<% end %>

<%= link_to image_tag('show.png') + ' Anzeigen', @blog %> |
<%= link_to image_tag('show.png') + ' Einträge anzeigen', [@blog, :entries] %> |
<%= link_to 'Zurück', blogs_path %>
