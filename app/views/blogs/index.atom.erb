<?xml version="1.0" encoding="utf-8"?>

<feed xmlns="http://www.w3.org/2005/Atom">
    <title>PPP - Blogs</title>
    <link rel="alternate" type="text/html" href="<%= blogs_path %>" />
    <link rel="self" type="application/atom+xml" href="<%= blogs_path(:atom) %>" />
    <id>tag:internal.innoq.com/iblog,2009:/iblog//1</id>
    <updated><%= @blogs[0].updated_at.to_formatted_s(:atom) unless @blogs.empty? %></updated>
    <subtitle>yet another internal innoQ blog platform</subtitle>

    <generator uri="https://internal.innoq.com/iblog/">i-Blogs Custom ATOM Feed Generator 1.0</generator>

<% @blogs.each do |blog| %>
<entry>
    <title><%= blog.title %></title>
    <link rel="alternate" type="text/html" href="<%= blog_entries_path(blog)%>" />
    <id>tag:internal.innoq.com/iblog,2009:/iblog//blogs/1.<%= blog.id %></id>

    <published><%= l blog.created_at, :format => :atom %></published>

    <updated><%= l blog.updated_at, :format => :atom %></updated>

    <summary>
        <![CDATA[
    <p>
    Blog '<%= blog.title %>' created.
    </p>
    ]]>
  </summary>
    <author>
        <name><%= blog.owner %></name>
        <uri>https://internal.innoq.com/iblog/home/<%= h blog.owner %></uri>
    </author>

    <content type="html" xml:lang="en" xml:base="https://internal.innoq.com/iblog/">
        <![CDATA[
    <p>
    Blog '<%= blog.title %>' created.
    </p>
    ]]>
    </content>
</entry>
<% end %>
</feed>
